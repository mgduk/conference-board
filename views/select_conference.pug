html
  head
    title= `Conference Boards with Trello`
    link(href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet")
    link(href="/style.css" rel="stylesheet")
  body
    article
      h1= `Conference Boards with Trello`

      include _intro.pug

      form(method=get)
        label Conference
        select(name='conference')
          each conference, name in conferences
            option(value=name)= conference.title
        button(type='submit') Select this conference

    include _footer.pug
